        <script type="text/javascript">
            $(document).ready(() =>{
                var connection = new signalR.HubConnectionBuilder()
            .withUrl("https://localhost:7112/SignalRHub")
            .build();

                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                    },1000);
                }).catch((err) => {console.log(err)});

                connection.on("ReceiveCategoryCount", (value) => {
                    $("#categorycount").text(value);
                });

                connection.on("ReceiveProductCount", (valuetwo) => {
                    $("#productcount").text(valuetwo);
                });

                connection.on("ReceiveActiveCategoryCount", (valueactive) => {
                    $("#activecategorycount").text(valueactive);
                });

                connection.on("ReceivePassiveCategoryCount", (valuepas) => {
                    $("#passivecategorycount").text(valuepas);
                });

                connection.on("ReceiveProductCountCategoryNameHamburger", (valuepro) => {
                    $("#hamburgercategorycount").text(valuepro);
                });

                connection.on("ReceiveProductCountCategoryNameDrink", (valueprodrink) => {
                    $("#drinkcategorycount").text(valueprodrink);
                });

                connection.on("ReceiveProductPriceAvg", (valueavg) => {
                    $("#avgcount").text(valueavg);
                });

                connection.on("ReceiveProductNameByMaxPrice", (valuemax) => {
                    $("#maxpricecount").text(valuemax);
                });

                connection.on("ReceiveProductNameByMinPrice", (valuemin) => {
                    $("#minpricecount").text(valuemin);
                });

                connection.on("ReceiveProductPriceByHamburger", (valuehamburger) => {
                    $("#avgpricehamburgercount").text(valuehamburger);
                });

                connection.on("ReceiveTotalOrderCount", (valueorder) => {
                    $("#totalordercount").text(valueorder);
                });

                connection.on("ReceiveActiveOrderCount", (valueactiveorder) => {
                    $("#activeordercount").text(valueactiveorder);
                });

                connection.on("ReceiveLastOrderPrice", (valuelastorder) => {
                    $("#lastordercount").text(valuelastorder);
                });

                connection.on("ReceiveTotalMoneyCaseAmount", (valuemoney) => {
                    $("#moneycasecount").text(valuemoney);
                });

                connection.on("ReceiveMenuTableCount", (valuemenu) => {
                    $("#menutablecount").text(valuemenu);
                });
            });
        </script>

